<!DOCTYPE html>

<html lang="en">

<head>
    <link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/themes/base/jquery-ui.css"
          rel="stylesheet" type="text/css" />
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDpqIFZspytVZ1xA9GFsj479rADlQcBsGY&callback=initMap"></script>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Melissa_Scott_9189_FA2_IPG521</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>

        #mapDiv img {
            max-width: none !important;
        }
    </style>
</head>
<body style="background-color: black; color: white;">
    <header>
        <nav style ="height: 100px;" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container" style=" margin-left: auto; margin-right: auto; width: 40%;">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Location">Location</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Favourites">Favourites</a>
                        </li>
                        <li class="nav-item"  style="font-size: xx-large;">
                            <a class ="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">BLACK INK</a>
</li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="https://www.crunchyroll.com/comics/manga" target="_blank">Latest News</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style=" background-color: #000000; text-align:center;">
        <p style="margin-left: 20px; color: white;"> Sponsored by our partners at <a href="https://www.crunchyroll.com/comics/manga" target="_blank">Crunchyroll.</a></p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

